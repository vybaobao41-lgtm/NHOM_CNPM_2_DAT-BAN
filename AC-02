def create_table(data_tu_fronted)
# 1. Lấy dữ liệu từ yêu cầu (phải thay đổi tùy theo cách framework xử lý)
ten_ban = data_tu_fronted.get('ten_ban')
so_luong_cho_ngoi = data_tu_fronted.get('so_luong_cho_ngoi')

# 2. Kiểm tra AC-02 (logic bắt buộc)
# Kiểm tra Ten ban ( có thể là None hoặc chuỗi rỗng)
if not ten_ban or str(ten_ban).strip() =="":
    #Trả về thông báo lỗi theo yêu cầu của AC-02
    return {"error": "Vui lòng nhập đầy đủ thông tin bắt buộc"}, 400
#Kiểm tra So luong cho ngoi (kiểm tra rỗng và phải là số dương)
try:
    so_luong_cho_ngoi_int = int(so_luong_cho_ngoi)
    if so_luong_cho_ngoi_int <=0:
        raise ValueError
    except (ValueError, TypeError):
        return {"error": "Vui lòng nhập đầy đủ thông tin bắt buộc"}, 400
# 3. Nếu kiểm tra OK, tiến hành lưu vào database
#..code lưu dữ liệu vào database...
return {"success": "thêm bàn mới thành công"}